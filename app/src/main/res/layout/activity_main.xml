<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical"
    tools:context="com.avenueinfotech.location.MainActivity">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.95"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <Button
            android:text="Night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nightbutton"
            android:onClick="night"
            android:layout_weight="1"
            />

        <Button
            android:text="Places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lablesbutton"
            android:onClick="lables"
            android:layout_weight="1"
            />

        <Button
            android:text="Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/norbutton"
            android:onClick="normal"
            android:layout_weight="1"
            />


        <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:id="@+id/editText"-->
            <!--android:text="canught place, Delhi"-->
            <!--android:layout_weight="20"-->
            <!--/>-->

        <Button
            android:text="Satelite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/satbutton"
            android:onClick="satelite"
            android:layout_weight="1"
            />


    </LinearLayout>


</LinearLayout>
